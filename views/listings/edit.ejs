<%- layout('layouts/boilerplate') -%>

<form
  method="POST"
  action="/listings/<%= listing._id %>?_method=PUT"
  novalidate
  class="needs-validation"
  enctype="multipart/form-data"
>
  <br /><br />

  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit your place</h3>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          required
          value="<%= listing.title %>"
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          name="listing[description]"
          class="form-control"
          required
        >
 <%= listing.description %> </textarea
        >
        <div class="invalid-feedback">Please add a short description!</div>
      </div>

      <div class="mb-3">
        Original Listing Image <br />
        <img src="<%= originalImageUrl %>" />
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input type="file" class="form-control" name="listing[image]" />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input type="text" name="listing[price]" class="form-control"
          value="<%= listing.price.toLocaleString("en-IN")%>" required />
          <div class="invalid-feedback">Price must be valid!</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            value="<%= listing.location%>"
            required
          />
          <div class="invalid-feedback">Location must be valid!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          name="listing[country]"
          class="form-control"
          value="<%= listing.country %>"
          required
        />
        <div class="invalid-feedback">Country must be valid!</div>
      </div>
      <button class="btn btn-dark edit-btn mb-3">Edit</button>
    </div>
  </div>
</form>
<br /><br />
